{% extends 'base.html.twig' %}

{% block content %}
	<section class="section-home">
		<h1 class="header-home-h1">{{ content.title }}</h1>
		<div class="header-section">
			<div class="left-content">
				<img class="shadow-img" src="{{ content.logo.thumbnails['1024x'] }}">
			</div>
			<div class="right-content">
				<h2>{{ content.subtitle |raw}}</h2>
				<div class="div-content">
					{{ content.article|raw }}
				</div>
				<div class="div-button">
					<a href="/" class="button-contact">Contact
						<span class="icon-next">></span>
					</a>
				</div>
			</div>
		</div>
	</section>
	<section>
		<div id="carouselExample" class="carousel slide">
			<div class="carousel-inner">
				{% for image in content.carousel %}
					{% if loop.first %}
						<div class="carousel-item active img-carousel">
					{% else %}
						<div class="carousel-item img-carousel">
					{% endif %}
						<img src="{{ image.thumbnails['400x'] }}" alt="{{ image.title }}" title="{{ image.description|default(image.title) }}" class="d-block w-100">
					</div>
				{% endfor %}
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</section>


{% endblock %}
