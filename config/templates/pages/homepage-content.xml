<?xml version="1.0"?>
<template xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage-content</key>

    <view>pages/homepage-content</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="de">Startseite</title>
        <title lang="fr">Accueil</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
                <title lang="fr">Titre</title>
            </meta>
            <params>
                <param name="headline" value="true" />
            </params>
            <tag name="sulu.rlp.part" />
        </property>
        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
                <title lang="fr">URL</title>
            </meta>

            <tag name="sulu.rlp" />
        </property>

        <property name="subtitle" type="text_editor">
            <meta>
                <title lang="en">sustitle</title>
                <title lang="de">subArtikel</title>
                <title lang="fr">Sous titre</title>
            </meta>
        </property>

        <property name="article" type="text_editor">
            <meta>
                <title lang="en">Article</title>
                <title lang="de">Artikel</title>
                <title lang="fr">Contenu</title>
            </meta>
        </property>
        <property name="logo" type="single_media_selection">
            <meta>
                <title lang="en">Logo</title>
                <title lang="fr">Logo</title>
            </meta>
        </property>
        <property name="carousel" type="media_selection">
            <meta>
                <title lang="en">Logos</title>
                <title lang="fr">Logos</title>
            </meta>
        </property>

    </properties>
</template>